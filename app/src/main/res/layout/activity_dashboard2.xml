<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#ffffff"
    tools:context="cdfi.fintantra.meity.Dashboard2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/ru"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:gravity="center"
            android:background="@color/colorPrimary2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="#ffffff"
                android:textSize="5sp"
                android:elevation="5sp"
                android:textStyle="bold"
                android:text="@string/version"
                android:layout_marginRight="10sp"
                android:layout_alignParentRight="true" />

            <ImageView

                android:layout_width="50sp"
                android:visibility="visible"
                android:layout_height="50sp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/llg"
                android:layout_margin="10sp"
                android:layout_alignParentRight="true" />
            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_margin="10sp"
                android:id="@+id/nd"

                android:background="@drawable/nd"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunil Kumar Thanga"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/title"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FDR Maker"
                android:visibility="gone"
                android:layout_centerHorizontal="true"

                android:textColor="#ffffff"
                android:layout_below="@id/title"
                android:id="@+id/title2"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <ImageView
                    android:id="@+id/im"
                    android:layout_width="150sp"
                    android:layout_height="260sp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/regfar" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:layout_below="@id/im"
                    android:textAlignment="center"
                    android:visibility="gone"
                    android:layout_margin="10sp"
                    android:textStyle="bold"
                    android:text="Register Farmer"
                    android:gravity="center_horizontal" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:textColor="#000000"
                    android:id="@+id/newdsgn"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:text="New Design"/>

                <ImageView
                    android:id="@+id/im2"
                    android:layout_width="250sp"
                    android:layout_height="200sp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/modfar" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/im2"
                    android:visibility="gone"
                    android:layout_margin="10sp"
                    android:gravity="center_horizontal"
                    android:text="Modify Farmer Detail"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>