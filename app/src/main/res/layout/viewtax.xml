                    android:textAlignment="viewEnd"
                    tools:ignore="RtlCompat"
                    android:layout_margin="10sp"
                    android:id="@+id/sgst"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"

                    android:textSize="15sp"/>
