                    android:layout_weight="1"
                    android:text="0"
                    android:layout_margin="10sp"
                    android:textAlignment="viewEnd"
                    tools:ignore="RtlCompat"
                    android:id="@+id/igsta"
                    android:textColor="#ffffff"
                    android:layout_gravity="center"

                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
