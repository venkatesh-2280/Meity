<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary2"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/cls"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/cls2" />

                <ImageView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:background="@drawable/user2"
                    android:id="@+id/iuser"
                    android:layout_centerVertical="true"
                    android:layout_margin="10sp"/>

                <TextView
                    android:id="@+id/tuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_toRightOf="@id/iuser"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:textColor="@color/black"
                    android:id="@+id/fname"
                    android:layout_toRightOf="@id/iuser"
                    android:textSize="15sp"
                    android:layout_below="@id/tuser"
                    android:text=""/>


            </RelativeLayout>

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:visibility="visible"
                    android:background="#23FFB84C"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@id/iuser"
                        android:layout_marginLeft="10sp"
                        android:layout_centerVertical="true"
                        android:textSize="20sp"
                        android:text="Sync"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rm"
                            >

                            <ImageView
                                android:id="@+id/img4"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="10sp"
                                android:layout_marginRight="10sp"
                                android:layout_marginBottom="10sp"
                                android:background="@drawable/mstr" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img4"
                                android:text="Master"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="20sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/memmap"
                            android:visibility="gone"
                            >

                            <ImageView
                                android:id="@+id/img4s"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="10sp"
                                android:layout_marginRight="10sp"
                                android:layout_marginBottom="10sp"
                                android:background="@drawable/rf2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img4s"
                                android:text="Member Mapping"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="20sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/trsfdr"
                            android:visibility="visible"
                            >
                            <ImageView
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:background="@drawable/trns"
                                android:id="@+id/img5"
                                android:layout_centerVertical="true"
                                android:layout_margin="10sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img5"
                                android:text="Transactions Sync FDR"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/trsicd"
                            android:visibility="visible"
                            >
                            <ImageView
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:background="@drawable/trns"
                                android:id="@+id/img5s"
                                android:layout_centerVertical="true"
                                android:layout_margin="10sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img5s"
                                android:text="Transactions Sync ICD"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/trspa"
                            android:visibility="visible"
                            >
                            <ImageView
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:background="@drawable/trns"
                                android:id="@+id/img6s"
                                android:layout_centerVertical="true"
                                android:layout_margin="10sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img6s"
                                android:text="Transactions Sync PA"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/trsgps"
                            android:visibility="visible"
                            >
                            <ImageView
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:background="@drawable/trns"
                                android:id="@+id/img7s"
                                android:layout_centerVertical="true"
                                android:layout_margin="10sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img7s"
                                android:text="Transactions Sync Start Your Activity"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/trsmm"


                            android:visibility="gone"
                            >

                            <ImageView
                                android:id="@+id/img8s"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="10sp"
                                android:layout_marginBottom="10sp"
                                android:background="@drawable/trns" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img8s"
                                android:text="Transactions Member Mapping"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/paymentpending"

                            android:visibility="visible"
                            >

                            <ImageView
                                android:id="@+id/img9s"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="10sp"
                                android:layout_marginBottom="10sp"
                                android:background="@drawable/paypending" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img9s"
                                android:text="Payment Status Check"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/aepslist"

                            android:visibility="visible"
                            >

                            <ImageView
                                android:id="@+id/img10s"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="10sp"
                                android:layout_marginBottom="10sp"
                                android:background="@drawable/paypending" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img10s"
                                android:text="AEPS Settlement &amp; History"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                        </RelativeLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"

                            android:alpha="0.6"
                            android:layout_margin="10sp"
                            android:background="@color/black"/>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="#23FFB84C"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@id/iuser"
                        android:layout_marginLeft="10sp"
                        android:layout_centerVertical="true"
                        android:textSize="20sp"
                        android:text="Transactions"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/r1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:elevation="5sp">

                            <ImageView
                                android:id="@+id/img"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10sp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginTop="10sp"
                                android:layout_marginEnd="10sp"
                                android:layout_marginRight="10sp"
                                android:layout_marginBottom="10sp"
                                android:background="@drawable/rf2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img"
                                android:text="Set MPIN"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="20sp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/r2"
                            android:elevation="5sp"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:background="@drawable/ed2"
                                android:id="@+id/img2"
                                android:layout_centerVertical="true"
                                android:layout_margin="10sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img2"
                                android:text="Change MPIN"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/r3"

                            android:visibility="visible"

                            android:elevation="5sp"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:background="@drawable/ed2"
                                android:id="@+id/img3"
                                android:layout_centerVertical="true"
                                android:layout_margin="10sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/img3"
                                android:text="Start Your Activity"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                        </RelativeLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:layout_alignParentBottom="true"
                            android:alpha="0.6"
                            android:layout_margin="10sp"
                            android:background="@color/black"/>



                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:background="#23FFB84C"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:background="@drawable/setting"

                                android:id="@+id/img6"
                                android:layout_centerVertical="true"
                                android:layout_margin="10sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_centerVertical="true"
                                android:textSize="20sp"
                                android:layout_toRightOf="@id/img6"
                                android:textStyle="bold"
                                android:text="Settings"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/rlog"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                android:background="@drawable/logout"
                                android:id="@+id/img7"
                                android:layout_centerVertical="true"
                                android:layout_margin="10sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:textSize="20sp"
                                android:layout_toRightOf="@id/img7"
                                android:text="Log Out"/>

                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>