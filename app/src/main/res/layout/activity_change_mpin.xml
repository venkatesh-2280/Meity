<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context=".ChangeMpin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:id="@+id/r">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="#ffffff"
                android:textSize="5sp"
                android:elevation="5sp"
                android:textStyle="bold"
                android:text="@string/version"
                android:layout_marginRight="10sp"
                android:layout_alignParentRight="true" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:background="@color/colorPrimary"

                android:layout_margin="0sp">
                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_margin="5sp"
                    android:id="@+id/list"
                    android:layout_centerVertical="true"
                    android:elevation="1sp"
                    android:visibility="gone"
                    android:background="@drawable/list"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textSize="@dimen/font_sizev"
                    android:id="@+id/name"
                    android:textColor="#ffffff"
                    android:text="Welcome Sunil Kumar Thanga"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/font_sizev"
                    android:visibility="gone"
                    android:id="@+id/fponame"
                    android:textColor="#ffffff"
                    android:layout_below="@id/name"
                    android:text="Thanga Thamarai IC"
                    android:layout_centerHorizontal="true"/>
                <ImageView

                    android:layout_width="50sp"
                    android:visibility="visible"
                    android:layout_height="50sp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/kanchinewlogo"
                    android:layout_margin="5sp"
                    android:elevation="10sp"

                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/ticd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25sp"
                    android:gravity="center"
                    android:text="Change MPIN"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtentermpin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_below="@+id/txtinfo"
                android:text="OLD MPIN"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/mpin1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/edt_border_white"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number|numberPassword"
                    android:maxLength="1"
                    android:nextFocusDown="@id/mpin2"
                    android:nextFocusForward="@+id/mpin2"
                    android:text=""
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/mpin2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/edt_border_white"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number|numberPassword"
                    android:maxLength="1"
                    android:nextFocusDown="@id/mpin3"
                    android:nextFocusForward="@+id/mpin3"
                    android:text=""
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/mpin3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/edt_border_white"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number|numberPassword"
                    android:maxLength="1"
                    android:nextFocusDown="@id/mpin4"
                    android:nextFocusForward="@+id/mpin4"
                    android:text=""
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/mpin4"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/edt_border_white"
                    android:gravity="center"
                    android:inputType="number|numberPassword"
                    android:maxLength="1"
                    android:text=""
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="10dp"
                android:background="#D0D3D4" />

            <TextView
                android:id="@+id/txtconfmpin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="NEW MPIN"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/nmpin1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@drawable/edt_border_white"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number|numberPassword"
                        android:maxLength="1"
                        android:nextFocusDown="@id/mpin2"
                        android:nextFocusForward="@+id/cmpin2"
                        android:text=""
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/nmpin2"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@drawable/edt_border_white"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number|numberPassword"
                        android:maxLength="1"
                        android:nextFocusDown="@id/mpin3"
                        android:nextFocusForward="@+id/cmpin3"
                        android:text=""
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/nmpin3"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@drawable/edt_border_white"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number|numberPassword"
                        android:maxLength="1"
                        android:nextFocusDown="@id/mpin4"
                        android:nextFocusForward="@+id/cmpin4"
                        android:text=""
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/nmpin4"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@drawable/edt_border_white"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:inputType="number|numberPassword"
                        android:maxLength="1"
                        android:text=""
                        android:textSize="15sp" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="10dp"
                android:background="#D0D3D4" />

            <TextView
                android:id="@+id/txtconfmpin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="CONFIRM NEW MPIN"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/cnpin1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@drawable/edt_border_white"
                        android:gravity="center"
                        android:inputType="number|numberPassword"
                        android:maxLength="1"
                        android:nextFocusDown="@id/cnpin2"
                        android:text=""
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/cnpin2"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@drawable/edt_border_white"
                        android:gravity="center"
                        android:inputType="number|numberPassword"
                        android:maxLength="1"
                        android:nextFocusDown="@id/cnpin3"
                        android:text=""
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/cnpin3"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@drawable/edt_border_white"
                        android:gravity="center"
                        android:inputType="number|numberPassword"
                        android:maxLength="1"
                        android:nextFocusDown="@id/cnpin4"
                        android:text=""
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/cnpin4"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@drawable/edt_border_white"
                        android:gravity="center"
                        android:inputType="number|numberPassword"
                        android:maxLength="1"
                        android:text=""
                        android:textSize="15sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/peye1"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/eye" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10sp"
                android:layout_marginTop="10dp"
                android:background="#D0D3D4" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="40sp">
                <android.widget.Button
                    android:id="@+id/bsave"
                    android:layout_width="wrap_content"
                    android:layout_height="40sp"
                    android:layout_gravity="center"
                    android:background="@drawable/rbutton"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>