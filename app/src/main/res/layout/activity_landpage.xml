<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context=".Landpage">
    <RelativeLayout
        android:id="@+id/progressLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transparent"
        android:visibility="gone">

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progress_wheel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            wheel:matProg_barColor="@color/colorAccent"
            wheel:matProg_progressIndeterminate="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:id="@+id/r"

        android:background="@color/colorPrimary"
        android:layout_margin="0sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:elevation="5sp"
            android:textStyle="bold"
            android:text="@string/version"
            android:layout_marginRight="10sp"
            android:layout_alignParentRight="true" />

        <ImageView
            android:id="@+id/nd"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/nd"
            android:elevation="1sp"
            android:visibility="visible" />
        <ImageView

            android:layout_width="40sp"
            android:visibility="visible"
            android:layout_height="40sp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/kanchinewlogo"
            android:layout_margin="10sp"
            android:elevation="10sp"

            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Kanchi Meity"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="@dimen/font_sizev"
            android:id="@+id/name"
            android:layout_marginTop="15sp"
            android:textColor="#ffffff"
            android:text="Welcome Sunil Kumar Thanga"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="12sp"
            android:id="@+id/fponame"
            android:textColor="#ffffff"
            android:layout_below="@id/name"
            android:text="Thanga Thamarai IC"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="visible"
        android:layout_below="@+id/r">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5sp"

            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        
                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:elevation="10sp"
                            android:id="@+id/regfar"

                            >


                            <ImageView
                                android:id="@+id/im"

                                android:layout_width="40sp"
                                android:layout_height="70sp"

                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20sp"
                                android:background="@drawable/regfar" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"


                                android:layout_below="@+id/im"

                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="25sp"
                                android:text="Register Farmer"


                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:visibility="visible" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        
                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:elevation="10sp"
                            android:id="@+id/modfar"

                            >


                            <ImageView
                                android:id="@+id/im2"

                                android:layout_width="70sp"
                                android:layout_height="70sp"

                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20sp"
                                android:background="@drawable/modfar" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"


                                android:layout_below="@+id/im2"

                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="25sp"
                                android:text="Modify Farmer Details"


                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:visibility="visible" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"

                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:elevation="10sp"
                            android:id="@+id/pdc"

                            >


                            <ImageView
                                android:id="@+id/im9"

                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                android:layout_centerHorizontal="true"

                                android:layout_marginLeft="20sp"
                                android:layout_marginTop="10sp"
                                android:background="@drawable/home" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"


                                android:layout_below="@+id/im9"

                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10sp"
                                android:text="Production Estimate"


                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:visibility="visible" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"

                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:elevation="10sp"
                            android:id="@+id/stkinw"

                            >


                            <ImageView
                                android:id="@+id/im3"

                                android:layout_width="70sp"
                                android:layout_height="70sp"

                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20sp"
                                android:background="@drawable/newinward" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"


                                android:layout_below="@+id/im3"

                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10sp"
                                android:text="IC-Stock Inward"


                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:visibility="visible" />
                        </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        
                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:elevation="10sp"
                            android:id="@+id/issue"

                            >


                            <ImageView
                                android:id="@+id/im4"

                                android:layout_width="70sp"
                                android:layout_height="70sp"

                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20sp"
                                android:background="@drawable/newtransfer" />

                            <TextView
                                android:id="@+id/txtissue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"


                                android:layout_below="@+id/im4"

                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10sp"
                                android:text="IC-Stock Transfer"


                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:visibility="visible" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"

                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:elevation="10sp"
                            android:id="@+id/bin"
                            >


                            <ImageView
                                android:id="@+id/im5"

                                android:layout_width="70sp"
                                android:layout_height="70sp"

                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20sp"
                                android:background="@drawable/newinvoice" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"


                                android:layout_below="@+id/im5"

                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10sp"
                                android:text="IC-Sale"


                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:visibility="visible" />
                        </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"

                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:elevation="10sp"
                        android:id="@+id/stkadj"

                        >


                        <ImageView
                            android:id="@+id/im6"

                            android:layout_width="70sp"
                            android:layout_height="70sp"

                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20sp"
                            android:background="@drawable/newstock" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:layout_below="@+id/im6"

                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10sp"
                            android:text="IC-Stock Adjustment"


                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"

                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:elevation="10sp"
                        android:id="@+id/binp"


                        >


                        <ImageView
                            android:id="@+id/im11"

                            android:layout_width="70sp"
                            android:layout_height="70sp"

                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20sp"
                            android:background="@drawable/collection" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:layout_below="@+id/im11"

                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10sp"
                            android:text="IC-Collection"


                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        
                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:elevation="10sp"

                            android:id="@+id/pentry"

                            >


                            <ImageView
                                android:id="@+id/im7"

                                android:layout_width="70sp"
                                android:layout_height="70sp"

                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20sp"
                                android:background="@drawable/est_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"


                                android:layout_below="@+id/im7"

                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10sp"
                                android:text="Aggregation of Produce"


                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:visibility="visible" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        
                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5sp"
                            android:elevation="10sp"
                            android:id="@+id/sentry"
                            >


                            <ImageView
                                android:id="@+id/im8"

                                android:layout_width="70sp"
                                android:layout_height="70sp"

                                android:layout_centerInParent="true"
                                android:layout_marginLeft="20sp"
                                android:background="@drawable/est_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"


                                android:layout_below="@+id/im8"

                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10sp"
                                android:text="Sale of Produce"


                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:visibility="visible" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r"
        android:visibility="gone"
   
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5sp"
            android:visibility="visible"
            android:layout_margin="5sp"
            

            android:layout_weight="1">

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:id="@+id/fdr"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/farmer"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fdr"
                android:visibility="visible"
                android:layout_margin="10sp"
                android:gravity="center_horizontal"
                android:text="FDR"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5sp"
            android:visibility="visible"
            android:layout_margin="5sp"
            android:id="@+id/r1"

            android:layout_weight="1">

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:id="@+id/icd"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/home"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/icd"
                android:visibility="visible"
                android:layout_margin="10sp"
                android:gravity="center_horizontal"
                android:text="ICD"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5sp"

            android:visibility="visible"
            android:layout_margin="5sp"


            android:layout_weight="1">

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:id="@+id/pawhs"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/wheat"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pawhs"
                android:visibility="visible"
                android:layout_margin="10sp"
                android:gravity="center_horizontal"
                android:text="PAWHS"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5sp"
            android:visibility="visible"
            android:layout_margin="5sp"
            android:id="@+id/r1p"

            android:layout_weight="1">

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:id="@+id/pro"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/home"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pro"
                android:visibility="visible"
                android:layout_margin="10sp"
                android:gravity="center_horizontal"
                android:text="Production Data Capture"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>