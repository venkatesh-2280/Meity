<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="cdfi.fintantra.meity.Payment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_margin="10sp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:id="@+id/r2">
                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_margin="10sp"
                        android:id="@+id/back"
                        android:background="@drawable/back"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_alignParentBottom="true"
                        android:alpha="0.6"
                        android:background="#ffffff"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/r2"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#f2f2f2"
                            android:alpha="0.5"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Invoice No:"
                                        android:textStyle="bold"
                                        android:textColor="#000000"
                                        android:layout_gravity="center"
                                        android:layout_margin="10sp"
                                        android:textSize="12sp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Invoice No"
                                        android:textAlignment="viewEnd"
                                        android:id="@+id/invoiceno"
                                        android:textColor="#000000"
                                        android:layout_gravity="center"
                                        android:layout_margin="10sp"
                                        android:textSize="12sp"
                                        tools:ignore="RtlCompat" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Amount:"
                                        android:textStyle="bold"
                                        android:textColor="#000000"
                                        android:layout_gravity="center"
                                        android:layout_margin="10sp"
                                        android:textSize="12sp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="amount"
                                        android:id="@+id/amount"
                                        android:textAlignment="viewEnd"

                                        android:textColor="#000000"
                                        android:layout_gravity="center"
                                        android:layout_margin="10sp"
                                        android:textSize="12sp"
                                        tools:ignore="RtlCompat" />
                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Paid:"
                                        android:textStyle="bold"
                                        android:textColor="#000000"
                                        android:layout_gravity="center"
                                        android:layout_margin="10sp"
                                        android:textSize="12sp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="paid"
                                        android:textAlignment="viewEnd"
                                        android:id="@+id/paid"
                                        android:textColor="#000000"
                                        android:digits="0123456789."
                                        android:inputType="number"
                                        android:layout_gravity="center"
                                        android:layout_margin="10sp"
                                        android:textSize="12sp"
                                        tools:ignore="RtlCompat" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Balance"
                                        android:textStyle="bold"
                                        android:textColor="#000000"
                                        android:layout_gravity="center"
                                        android:layout_margin="10sp"
                                        android:textSize="12sp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="balance"
                                        android:textAlignment="viewEnd"
                                        android:id="@+id/balance"
                                        android:textColor="#000000"
                                        android:layout_gravity="center"
                                        android:layout_margin="10sp"
                                        android:textSize="12sp"
                                        tools:ignore="RtlCompat" />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100sp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="100sp"
                                >
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1sp"
                                    android:background="#000000"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginHorizontal="12sp"
                                    android:alpha="0.6"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Paymode"
                                        android:textSize="17sp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1.5"
                                        android:textStyle="bold"
                                        android:textColor="#000000"
                                        android:layout_centerVertical="true"
                                        android:id="@+id/txt19"
                                        android:layout_marginLeft="12sp"/>
                                    <Spinner
                                        android:layout_width="match_parent"
                                        android:layout_height="40sp"
                                        android:textSize="12sp"
                                        android:id="@+id/spinner"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:layout_centerVertical="true"
                                        android:layout_margin="12sp"
                                        android:textColor="#000000"
                                        android:layout_toRightOf="@id/txt19"
                                        android:background="@drawable/spinner"/>
                                </LinearLayout></RelativeLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100sp"
                            android:id="@+id/lch"
                            android:visibility="gone"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="100sp"

                                >
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1sp"
                                    android:background="#000000"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginHorizontal="12sp"
                                    android:alpha="0.6"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Cheque No"
                                        android:textSize="17sp"
                                        android:textStyle="bold"
                                        android:layout_gravity="center"
                                        android:layout_weight="1.5"
                                        android:layout_centerVertical="true"
                                        android:textColor="#000000"
                                        android:id="@+id/txt202"
                                        android:layout_marginLeft="12sp"/>
                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="40sp"
                                        android:textSize="12sp"
                                        android:layout_margin="12sp"
                                        android:id="@+id/chno"
                                        android:layout_centerVertical="true"
                                        android:inputType="number"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="10sp"
                                        android:textColor="#000000"
                                        android:layout_toRightOf="@id/txt202"
                                        android:background="@drawable/red"/>
                                </LinearLayout></RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100sp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="100sp"
                                >
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1sp"
                                    android:background="#000000"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginHorizontal="12sp"
                                    android:alpha="0.6"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Amount Paid"
                                        android:textSize="17sp"
                                        android:layout_centerVertical="true"
                                        android:textStyle="bold"
                                        android:layout_gravity="center"
                                        android:layout_weight="1.5"
                                        android:textColor="#000000"
                                        android:id="@+id/txt20"
                                        android:layout_marginLeft="12sp"/>
                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="40sp"
                                        android:textSize="12sp"
                                        android:layout_centerVertical="true"
                                        android:layout_margin="12sp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:id="@+id/eamountpaid"
                                        android:inputType="numberDecimal"
                                        android:layout_marginLeft="10sp"
                                        android:textColor="#000000"
                                        android:layout_toRightOf="@id/txt20"
                                        android:background="@drawable/red"/>
                                </LinearLayout></RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100sp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1sp"
                                    android:background="#000000"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginHorizontal="12sp"
                                    android:alpha="0.6"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Reference No"
                                        android:textSize="17sp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1.5"
                                        android:layout_centerVertical="true"
                                        android:textStyle="bold"
                                        android:textColor="#000000"
                                        android:id="@+id/txt21"
                                        android:layout_marginLeft="12sp"/>
                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="40sp"
                                        android:inputType="text"
                                        android:layout_centerVertical="true"
                                        android:textSize="12sp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:layout_margin="12sp"
                                        android:id="@+id/erefno"
                                        android:layout_marginLeft="10sp"
                                        android:textColor="#000000"
                                        android:layout_toRightOf="@id/txt21"
                                        android:background="@drawable/red"/>
                                </LinearLayout></RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100sp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1sp"
                                    android:background="#000000"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginHorizontal="12sp"
                                    android:alpha="0.6"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Date"
                                        android:textSize="17sp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1.5"
                                        android:textStyle="bold"
                                        android:layout_centerVertical="true"
                                        android:textColor="#000000"
                                        android:id="@+id/txt23"
                                        android:layout_marginLeft="12sp"/>
                                    <EditText
                                        android:layout_width="match_parent"
                                        android:layout_height="40sp"
                                        android:textSize="12sp"
                                        android:layout_margin="12sp"
                                        android:id="@+id/epdate"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:clickable="true"
                                        android:layout_centerVertical="true"
                                        android:editable="false"
                                        android:layout_marginLeft="10sp"
                                        android:drawableRight="@drawable/cald"
                                        android:textColor="#000000"
                                        android:layout_toRightOf="@id/txt23"
                                        android:background="@drawable/red"/>
                                </LinearLayout></RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100sp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1sp"
                                    android:background="#000000"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginHorizontal="12sp"
                                    android:alpha="0.6"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Balance"
                                        android:textSize="17sp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1.5"
                                        android:layout_centerVertical="true"
                                        android:textStyle="bold"
                                        android:textColor="#000000"
                                        android:id="@+id/txt25"
                                        android:layout_marginLeft="12sp"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1">
                                        <EditText
                                            android:layout_width="match_parent"
                                            android:layout_height="40sp"
                                            android:textSize="12sp"
                                            android:layout_margin="12sp"
                                            android:layout_centerVertical="true"
                                            android:layout_marginLeft="10sp"
                                            android:id="@+id/ebalance"
                                            android:enabled="false"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:textColor="#000000"
                                            android:inputType="numberDecimal"
                                            android:layout_toRightOf="@id/txt25"
                                            android:background="@drawable/red2"/>
                                        <Button
                                            android:layout_width="match_parent"
                                            android:layout_height="40sp"
                                            android:text="View"
                                            android:drawableLeft="@drawable/viewb"
                                            android:paddingStart="10sp"
                                            android:paddingLeft="10sp"
                                            android:textAllCaps="false"
                                            android:textSize="12sp"
                                            android:layout_gravity="center"
                                            android:layout_weight="1.5"



                                            android:textColor="#ffffff"
                                            android:background="@drawable/rbutton"
                                            android:layout_alignParentBottom="true"
                                            android:layout_margin="10sp"
                                            android:id="@+id/viewp"/>

                                    </LinearLayout>
                                </LinearLayout></RelativeLayout>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

</RelativeLayout>