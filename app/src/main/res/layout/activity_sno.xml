<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context=".Pawhs.SnoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:background="@color/colorPrimary"

            android:layout_margin="0sp">
            <ImageView

                android:layout_width="50sp"
                android:visibility="visible"
                android:layout_height="50sp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/llg"
                android:layout_margin="10sp"
                android:elevation="10sp"

                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/ticd"
                android:textSize="25sp"
                android:layout_marginTop="15sp"
                android:textColor="#ffffff"
                android:text="ICD"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:visibility="gone"
                android:gravity="center"
                android:textSize="@dimen/font_sizev"                    android:id="@+id/name"
                android:textColor="#ffffff"
                android:text="Welcome Sunil Kumar Thanga"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/font_sizev"
                android:visibility="gone" android:id="@+id/title"
                android:textColor="#ffffff"
                android:layout_below="@id/name"
                android:text="Thanga Thamarai IC"
                android:layout_centerHorizontal="true"/>
            <!--                <TextView-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:gravity="center"-->
            <!--                    android:textSize="15sp"-->
            <!--                    android:id="@+id/title2"-->
            <!--                    android:textColor="#ffffff"-->
            <!--                    android:layout_below="@id/title"-->
            <!--                    android:text="Adjust Stock"-->
            <!--                    android:layout_centerHorizontal="true"/>-->

        </RelativeLayout>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="?attr/colorPrimary"
           >

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Serial Bags"
                android:maxLines="2"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/relativebg">
                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:id="@+id/qrcode"
                    android:layout_margin="10sp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/barcode"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />
                <RelativeLayout
                    android:layout_width="300sp"
                    android:layout_height="match_parent"

                    android:layout_margin="10sp"

                    android:gravity="center"
                    >
                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        >

                        <EditText

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:id="@+id/edt_serialno"
                            android:focusable="true"
                            android:paddingLeft="10sp"

                            android:hint="Serial no of Item"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="20dp">

                <android.widget.Button
                    android:id="@+id/but_add"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/rbutton"
                    android:text="Add"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <android.widget.Button
                    android:id="@+id/but_close"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/rbutton2"
                    android:text="Close"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <android.widget.Button
                    android:id="@+id/but_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/rbutton4"
                    android:text="Cancel"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_serialno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>