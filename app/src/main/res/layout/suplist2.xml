<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="150sp"
    android:layout_margin="5sp"
    android:background="@drawable/newrlbg"

    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llist"
        android:elevation="5sp"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_weight="2.3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/locfdr"
            />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center|start"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t6"
                android:visibility="gone"
                android:text="Hamlet:"
                android:layout_margin="5sp"
                android:textSize="15sp"

                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ham"
                android:text=""
                android:visibility="gone"


                android:layout_toRightOf="@id/t6"
                android:layout_margin="5sp"
                android:textSize="15sp"

                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t1"
                android:text="Village Name:"
                android:layout_below="@+id/t6"
                android:layout_margin="5sp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvn"
                android:text="Name:"
                android:layout_below="@+id/t6"
                android:layout_toRightOf="@id/t1"
                android:layout_margin="5sp"
                android:textSize="15sp"

                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t2"
                android:text="Grama Panchayat:"
                android:layout_margin="5sp"
                android:textSize="15sp"
                android:layout_below="@id/t1"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tgpn"
                android:text="Mobile:"
                android:layout_below="@id/t1"

                android:layout_toRightOf="@id/t2"
                android:layout_margin="5sp"
                android:textSize="15sp"

                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t3"
                android:text="Taluk:"
                android:layout_margin="5sp"
                android:textSize="15sp"
                android:layout_below="@id/t2"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ttn"
                android:text="Location:"
                android:layout_below="@id/t2"

                android:layout_toRightOf="@id/t3"
                android:layout_margin="5sp"
                android:textSize="15sp"

                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t4"
                android:text="District:"
                android:layout_margin="5sp"
                android:textSize="15sp"
                android:layout_below="@id/t3"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tdn"
                android:text="type:"
                android:layout_below="@id/t3"

                android:layout_toRightOf="@id/t4"
                android:layout_margin="5sp"
                android:textSize="15sp"

                android:textColor="#000000"/>

        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>


</RelativeLayout>