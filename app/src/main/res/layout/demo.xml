<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/l5"
        android:visibility="visible"
        android:layout_marginHorizontal="15sp"

        android:orientation="vertical">






        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"

            android:background="@drawable/relativebg"
            android:layout_margin="5sp">
            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                >

                <AutoCompleteTextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingLeft="10sp"
                    android:focusable="false"
                    android:text="English"
                    android:id="@+id/language"
                    android:hint="Language"/>
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"

            android:background="@drawable/relativebg"
            android:layout_margin="5sp">


            <TextView

                android:id="@+id/uaspoly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10sp"
                android:background="@null"
                android:hint="Consent Type"

                android:inputType="number"
                android:paddingLeft="5sp"
                android:textSize="19sp" />

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/uaspoly"
                android:orientation="horizontal"

                android:id="@+id/radioGroup"
                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="OTP"
                    android:layout_margin="5sp"
                    android:id="@+id/radioButton1"
                    android:layout_gravity="center"
                    android:checked="false"
                    android:textSize="19sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Attachment"
                    android:layout_margin="5sp"

                    android:id="@+id/radioButton2"
                    android:layout_gravity="center"
                    android:checked="false"
                    android:textSize="19sp"
                    />
            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/relativebg"
            android:layout_margin="5sp">
            <EditText

                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:background="@null"
                android:paddingLeft="10sp"
                android:gravity="start"
                android:padding="5sp"
                android:focusable="false"

                android:hint="Language"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"

            android:background="@drawable/relativebg"
            android:layout_margin="5sp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginRight="10sp"
                android:id="@+id/checkbox"
                android:layout_marginBottom="10sp"
                android:text="I have read the consent and am agreeable to the same"
                android:textColor="#000000" />



        </RelativeLayout>












        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/agree"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/rbutton4"

                android:paddingLeft="10sp"
                android:text="Agree"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/disagree"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/rbutton2"

                android:paddingLeft="10sp"
                android:text="DisAgree"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>