        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:background="@drawable/edi"
                            android:layout_toLeftOf="@id/del"

                            android:layout_margin="10sp"
                            android:id="@+id/ed"
                            />

                        <ImageView
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:background="@drawable/del"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="10sp"
                            android:id="@+id/del"
                            android:layout_alignParentRight="true" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:textSize="15sp"
                                android:layout_weight="1"

                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:text="Item:"
                                android:layout_margin="10sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:textSize="15sp"
                                android:layout_weight="1"

                                android:id="@+id/t1"
                                android:textAlignment="viewEnd"
                                tools:ignore="RtlCompat"
                                android:textColor="#ffffff"

                                android:text="Wheat"
                                android:layout_margin="10sp"/>
                        </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textSize="15sp"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:text="Quantity:"
                                android:layout_margin="10sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:id="@+id/qty"
                                android:textAlignment="viewEnd"
                                tools:ignore="RtlCompat"
                                android:textSize="15sp"
                                android:textColor="#ffffff"

                                android:text="8"
                                android:layout_margin="10sp"/>

                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:text="Rate:"
                            android:layout_margin="10sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:textAlignment="viewEnd"
                            tools:ignore="RtlCompat"
                            android:id="@+id/rate"
                            android:textColor="#ffffff"

                            android:text="80"
                            android:layout_margin="10sp"/>

                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textSize="15sp"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:text="Amount:"
                                android:layout_margin="10sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textSize="15sp"
                                android:id="@+id/amt"
                                android:textAlignment="viewEnd"
                                tools:ignore="RtlCompat"
                                android:textColor="#ffffff"

                                android:text="800"
                                android:layout_margin="10sp"/>

                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:text="Other Cost:"
                            android:layout_margin="10sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textAlignment="viewEnd"
                            tools:ignore="RtlCompat"
                            android:textSize="15sp"
                            android:textColor="#ffffff"

                            android:text="0"
                            android:id="@+id/dis"
                            android:layout_margin="10sp"/>

                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textSize="15sp"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:text="Discount:"
                                android:layout_margin="10sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textSize="15sp"
                                android:textColor="#ffffff"

                                android:text="100"
                                android:layout_margin="10sp"/>

                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textSize="15sp"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:text="Transport:"
                                android:layout_margin="10sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textSize="15sp"
                                android:textColor="#ffffff"

                                android:text="150"
                                android:layout_margin="10sp"/>

                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_weight="1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textSize="15sp"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:text="Others:"
                                android:layout_margin="10sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textSize="15sp"
                                android:textColor="#ffffff"

                                android:text="50"
                                android:layout_margin="10sp"/>

                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#179435"
                    >
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#179435"
                        android:alpha="0.6"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"


                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:textSize="15sp"
                                    android:textColor="#ffffff"
                                    android:textStyle="bold"
                                    android:text="Net Amount:"
                                    android:layout_margin="10sp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:textSize="15sp"
                                    android:textAlignment="viewEnd"
                                    tools:ignore="RtlCompat"
                                    android:textColor="#ffffff"
                                    android:id="@+id/namt"

                                    android:text="1000"
                                    android:layout_margin="10sp"/>
                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
