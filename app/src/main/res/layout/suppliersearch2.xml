<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#000000"
        android:alpha="0.6"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#000000"
        android:layout_alignParentBottom="true"
        android:alpha="0.6"/>
    <View
        android:layout_width="1sp"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_alignParentEnd="true"
        android:alpha="0.6"
        android:layout_alignParentRight="true" />

    <View
        android:layout_width="1sp"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="#000000" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l"
        android:layout_below="@+id/rc"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/l_1"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1">

                <AutoCompleteTextView
                    android:id="@+id/elc"
                    android:layout_width="250sp"
                    android:layout_height="40sp"

                    android:layout_marginStart="15sp"
                    android:layout_marginLeft="15sp"

                    android:layout_marginTop="15sp"
                    android:layout_marginEnd="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginBottom="15sp"
                    android:background="@drawable/red"

                    android:completionThreshold="1"
                    android:drawableLeft="@drawable/src"
                    android:hint="Search Here"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/orlbl"
                    android:layout_width="250sp"
                    android:layout_marginLeft="15sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/elc"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="Or"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <AutoCompleteTextView
                    android:id="@+id/elc2"
                    android:layout_width="250sp"
                    android:layout_height="40sp"
                    android:layout_below="@+id/orlbl"
                    android:visibility="gone"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="15sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginEnd="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginBottom="15sp"
                    android:background="@drawable/red"
                    android:completionThreshold="1"
                    android:drawableLeft="@drawable/src"
                    android:hint="Search Mobile"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textSize="15sp" />
                <Button
                    android:id="@+id/addhamlet"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_margin="10sp"
                    android:layout_below="@id/elc"
                    android:layout_weight="1"
                    android:background="@drawable/rbutton"

                    android:paddingLeft="10sp"
                    android:text="Add Hamlet"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone"

                android:layout_weight="1">

                <AutoCompleteTextView
                    android:layout_width="250sp"
                    android:layout_height="40sp"
                    android:textSize="15sp"
                    android:maxLength="10"
                    android:hint="searchhere"

                    android:completionThreshold="1"
                    android:id="@+id/esupplier2"
                    android:inputType="text"
                    android:drawableLeft="@drawable/src"
                    android:layout_margin="15sp"
                    android:layout_marginLeft="10sp"
                    android:textColor="#000000"

                    android:background="@drawable/red"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/linearradiob">
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center|start">

                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:layout_margin="5sp"
                    android:checked="false"
                    android:text="All"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5sp"
                    android:checked="false"
                    android:text="Consent"
                    android:textSize="10sp" />


            </RadioGroup>
            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center|start">


                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5sp"
                    android:checked="false"
                    android:text="No Consent"
                    android:textSize="10sp" />
                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5sp"
                    android:checked="false"
                    android:text="Dis Agree Consent"
                    android:textSize="10sp" />

            </RadioGroup>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rc"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorPrimary2">

            <TextView
            android:id="@+id/dialogtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text=""
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/cls"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/cls" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/select"
        android:layout_below="@+id/l"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_marginBottom="20sp"
        android:textSize="15sp"
        android:padding="5sp"
        android:visibility="gone"

        android:text="Add New Member"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary2"
        android:layout_alignParentBottom="true"
        android:id="@+id/select"/>

</RelativeLayout>