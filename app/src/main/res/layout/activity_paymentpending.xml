<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Paymentpending"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/tr"
        android:layout_width="match_parent"
        android:layout_height="80sp"

        android:layout_marginStart="0sp"
        android:layout_marginTop="0sp"
        android:layout_marginEnd="0sp"
        android:layout_marginBottom="0sp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"
            android:elevation="5sp"
            android:text="@string/version"
            android:textColor="#ffffff"
            android:textSize="5sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Welcome Sunil Kumar Thanga"
            android:textColor="#ffffff"
            android:textSize="@dimen/font_sizev"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/fponame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Thanga Thamarai IC"
            android:textColor="#ffffff"
            android:textSize="@dimen/font_sizev"
            android:visibility="gone" />

        <ImageView

            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10sp"
            android:background="@drawable/kanchinewlogo"
            android:elevation="10sp"

            android:visibility="visible" />

        <TextView
            android:id="@+id/ticd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:text="ICD"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fponame2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ticd"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Payment Pending"
            android:textColor="#ffffff"
            android:textSize="@dimen/font_sizev" />


    </RelativeLayout>

    <ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_gravity="end"

        android:id="@+id/sconnecton"
        android:layout_margin="5sp"

        android:text="Open Connection"
        android:background="@drawable/grayblue"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rpaypending"/>

</LinearLayout>