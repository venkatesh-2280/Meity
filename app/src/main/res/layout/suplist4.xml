<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5sp"
    android:background="#515A5A"

    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llist"
        android:elevation="5sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_weight="2.3">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"

                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center|start"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t1fc"
                    android:text="Farmer Code:"
                    android:layout_margin="5sp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fc"
                    android:text="Name:"
                    android:layout_toRightOf="@id/t1fc"
                    android:layout_margin="5sp"
                    android:textSize="13sp"

                    android:textColor="#ffffff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t1"
                    android:layout_below="@id/t1fc"
                    android:text="Farmer Name:"
                    android:layout_margin="5sp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fn"
                    android:layout_below="@id/t1fc"

                    android:text="Name:"
                    android:layout_toRightOf="@id/t1"
                    android:layout_margin="5sp"
                    android:textSize="13sp"

                    android:textColor="#ffffff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tfat"
                    android:layout_below="@id/t1"
                    android:text="FHW Name:"
                    android:layout_margin="5sp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fat"
                    android:layout_below="@id/t1"

                    android:text="Name:"
                    android:layout_toRightOf="@id/tfat"
                    android:layout_margin="5sp"
                    android:textSize="13sp"

                    android:textColor="#ffffff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t2"
                    android:text="Village:"
                    android:layout_margin="5sp"
                    android:textSize="13sp"
                    android:layout_below="@id/tfat"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vi"
                    android:text="Mobile:"
                    android:layout_below="@id/tfat"

                    android:layout_toRightOf="@id/t2"
                    android:layout_margin="5sp"
                    android:textSize="13sp"

                    android:textColor="#ffffff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t3"
                    android:text="Grama Panchayat:"
                    android:layout_margin="5sp"
                    android:textSize="13sp"
                    android:layout_below="@id/t2"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gp"
                    android:text="Location:"
                    android:layout_below="@id/t2"

                    android:layout_toRightOf="@id/t3"
                    android:layout_margin="5sp"
                    android:textSize="13sp"

                    android:textColor="#ffffff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t4"
                    android:text="Taluk:"
                    android:layout_margin="5sp"
                    android:textSize="13sp"
                    android:layout_below="@id/t3"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ta"
                    android:text="type:"
                    android:layout_below="@id/t3"

                    android:layout_toRightOf="@id/t4"
                    android:layout_margin="5sp"
                    android:textSize="13sp"

                    android:textColor="#ffffff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t5"
                    android:text="District:"
                    android:layout_margin="5sp"
                    android:textSize="13sp"
                    android:layout_below="@id/t4"
                    android:textStyle="bold"
                    android:textColor="#ffffff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/di"
                    android:text="type:"
                    android:layout_below="@id/t4"

                    android:layout_toRightOf="@id/t5"
                    android:layout_margin="5sp"
                    android:textSize="13sp"

                    android:textColor="#ffffff"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>