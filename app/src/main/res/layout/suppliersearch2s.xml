<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#000000"
        android:alpha="0.6"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#000000"
        android:layout_alignParentBottom="true"
        android:alpha="0.6"/>
    <View
        android:layout_width="1sp"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_alignParentEnd="true"
        android:alpha="0.6"
        android:layout_alignParentRight="true" />
    <View
        android:layout_width="1sp"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha="0.6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l"
        android:layout_below="@+id/rc"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1">

            <AutoCompleteTextView
                android:layout_width="250sp"
                android:layout_height="40sp"
                android:textSize="15sp"

                android:hint="Search Here"
                android:completionThreshold="1"

                android:id="@+id/elc"
                android:inputType="text"
                android:drawableLeft="@drawable/src"
                android:layout_margin="15sp"
                android:layout_marginLeft="10sp"
                android:textColor="#000000"

                android:background="@drawable/red"/>
            <Button
                android:id="@+id/addhamlet"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:layout_below="@id/elc"
                android:layout_weight="1"
                android:background="@drawable/rbutton"

                android:paddingLeft="10sp"
                android:text="Add Hamlet"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"

            android:layout_weight="1">

            <AutoCompleteTextView
                android:layout_width="250sp"
                android:layout_height="40sp"
                android:textSize="15sp"
                android:maxLength="10"
                android:hint="searchhere"

                android:completionThreshold="1"
                android:id="@+id/esupplier2"
                android:inputType="text"
                android:drawableLeft="@drawable/src"
                android:layout_margin="15sp"
                android:layout_marginLeft="10sp"
                android:textColor="#000000"

                android:background="@drawable/red"/>
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorPrimary2"
        android:id="@+id/rc">
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:id="@+id/cls"
            android:background="@drawable/cls"
            android:layout_alignParentEnd="true"
            android:layout_margin="10sp"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itm"
        android:layout_width="match_parent"
        android:layout_margin="10sp"
        android:layout_below="@+id/l"
        android:layout_above="@+id/select"
        android:layout_height="match_parent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_marginBottom="20sp"
        android:textSize="15sp"
        android:padding="5sp"
        android:visibility="gone"

        android:text="Add New Member"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary2"
        android:layout_alignParentBottom="true"
        android:id="@+id/select"/>

</RelativeLayout>