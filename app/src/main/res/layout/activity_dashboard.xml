<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context="cdfi.fintantra.meity.Dashboard">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:textSize="5sp"
        android:elevation="5sp"
        android:textStyle="bold"
        android:text="@string/version"
        android:layout_marginRight="10sp"
        android:layout_alignParentRight="true" />
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:background="#ffffff"
        android:elevation="10sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/pb"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:id="@+id/r"

        android:background="@color/colorPrimary"
        android:layout_margin="0sp">

        <ImageView
            android:id="@+id/nd"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/nd"
            android:elevation="1sp" />
        <ImageView

            android:layout_width="40sp"
            android:visibility="visible"
            android:layout_height="40sp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/kanchinewlogo"
            android:layout_margin="10sp"
            android:elevation="10sp"

            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textSize="25sp"

            android:textColor="#ffffff"
            android:text="ICD"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
          android:gravity="center"
            android:visibility="gone"
            android:textSize="@dimen/font_sizev"
            android:id="@+id/name"
            android:layout_marginTop="15sp"
            android:textColor="#ffffff"
            android:text="Welcome Sunil Kumar Thanga"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="12sp"
            android:id="@+id/fponame"
            android:textColor="#ffffff"
            android:layout_below="@id/name"
            android:text="Thanga Thamarai IC"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10sp"
        android:layout_below="@id/r"
        android:layout_marginVertical="0sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linward"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/rl1"
                        android:layout_width="400sp"
                        android:layout_height="match_parent"

                        android:layout_centerInParent="true"
                        android:elevation="5sp">

                        <ImageView
                            android:id="@+id/biwd"
                            android:layout_width="100sp"
                            android:layout_height="100sp"

                            android:layout_centerInParent="true"
                            android:background="@drawable/newinward" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/biwd"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="Inward Stock"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="400sp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"

                        android:layout_centerHorizontal="true"
                        android:elevation="5sp"
                        android:id="@+id/rl4"
                        >

                        <ImageView
                            android:id="@+id/imit"
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/newtransfer" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textColor="#000000"
                            android:text=""
                            android:id="@+id/ttimt"
                            android:layout_below="@+id/imit"/>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="400sp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"

                        android:layout_centerHorizontal="true"
                        android:elevation="5sp"
                        android:id="@+id/rl2"
                        >

                        <ImageView
                            android:id="@+id/biv"
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/newinvoice" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textColor="#000000"
                            android:text="Book Invoice"
                            android:layout_below="@+id/biv"/>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="400sp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:elevation="5sp"

                        android:id="@+id/rl3"
                        >

                        <ImageView
                            android:id="@+id/sa"
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/newstock" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textColor="#000000"
                            android:text="Adjust Stock"
                            android:layout_below="@+id/sa"/>


                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>