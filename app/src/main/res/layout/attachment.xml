<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/dtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:text="Consent Form Attachment"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/ps_doctype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="Document Type"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/star"
                android:layout_gravity="start"
                android:layout_toRightOf="@id/ps_doctype"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/dicon1"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:layout_toRightOf="@id/star"
                android:visibility="gone"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ll_doctype"
                android:layout_below="@+id/ps_doctype"
                android:gravity="center">
                <AutoCompleteTextView
                    android:id="@+id/doctype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="10sp"

                    android:maxLength="64"
                    android:textSize="15sp"
                    android:background="@android:color/transparent"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:drawableRight="@drawable/ic_drop_down"
                    android:layout_weight="1"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_below="@+id/ll_doctype"
                android:layout_marginHorizontal="10sp"
                android:background="@color/gray" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/ps_docsubtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="Document Sub Type"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_toRightOf="@id/ps_docsubtype"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ll_docsubtype"
                android:layout_below="@+id/ps_docsubtype"
                android:gravity="center">
                <AutoCompleteTextView
                    android:id="@+id/docsubtype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@android:color/transparent"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:drawableRight="@drawable/ic_drop_down"
                    android:maxLength="64"
                    android:textSize="15sp"

                    android:layout_weight="1"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_below="@+id/ll_docsubtype"
                android:layout_marginHorizontal="10sp"
                android:background="@color/gray" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/ps_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"

                android:layout_toRightOf="@id/ps_version"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ps_version"
                android:layout_margin="10sp"
                android:background="@null"
                android:maxLength="64"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_below="@+id/version"
                android:layout_marginHorizontal="10sp"
                android:background="@color/gray" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/ps_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ps_size"
                android:layout_margin="10sp"
                android:background="@null"
                android:maxLength="64"
                 />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_below="@+id/size"
                android:layout_marginHorizontal="10sp"
                android:background="@color/gray" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ps_filename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="File Name"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_toRightOf="@id/ps_filename"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/attachment"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"

                android:layout_toRightOf="@id/ps_filename"

                android:background="@drawable/capture"

                android:visibility="visible" />

            <AutoCompleteTextView
                android:id="@+id/filename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ps_filename"
                android:layout_marginStart="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:background="@null"
                android:focusable="false"
                android:maxLength="64"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_below="@+id/filename"
                android:layout_marginHorizontal="10sp"
                android:background="@color/gray" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:background="@drawable/relativebg"
            android:layout_margin="10sp">

            <CheckBox
                android:id="@+id/verifycheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:text="Is Verified!"
                android:textColor="#000000" />



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/bsave"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_margin="5sp"
                android:background="@drawable/bdarkgreen"
                android:text="Save"
                android:textSize="15sp"
                android:visibility="gone"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:typeface="sans"
                 />

            <android.widget.Button
                android:id="@+id/but_cancl"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:textColor="@color/white"
                android:layout_margin="5sp"
                android:textStyle="bold"
                android:text="Cancel"
                android:textSize="15sp"

                android:textAllCaps="false"
                android:background="@drawable/bdarkred"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>