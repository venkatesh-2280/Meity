<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductionTab">

    <RelativeLayout
        android:id="@+id/ru"
        android:layout_width="match_parent"
        android:layout_height="60sp"

        android:background="@color/colorPrimaryDark2">

        <android.widget.ImageView

            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10sp"
            android:background="@drawable/kanchinewlogo"
            android:elevation="10sp"

            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"
            android:elevation="5sp"
            android:text="@string/version"
            android:textColor="#ffffff"
            android:textSize="5sp"
            android:textStyle="bold" />

        <android.widget.ImageView
            android:id="@+id/nd"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"

            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/nd"
            android:visibility="visible" />

        <TextView
            android:id="@+id/titlee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Production"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="bold" />

        <android.widget.ImageView
            android:id="@+id/master"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10sp"
            android:background="@drawable/mmst"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_below="@id/ru"
        android:id="@+id/r"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerVertical="true"

            android:id="@+id/fname"
            android:layout_marginLeft="15sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:textSize="15sp"
            android:drawableLeft="@drawable/src"
            android:layout_marginHorizontal="25sp"
            android:layout_margin="15sp"
            android:layout_toRightOf="@id/fname"
            android:textColorHint="#000000"
            android:hint="Search &amp; populate"
            android:layout_marginLeft="10sp"
            android:textColor="#000000"
            android:id="@+id/e"
            android:layout_toLeftOf="@id/qrcode"

            android:focusable="false"
            android:background="@drawable/red2"
            />

        <android.widget.ImageView
            android:id="@+id/qrcode"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/qrcode" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#333333"
            android:alpha="0.4"
            android:layout_below="@+id/e"
            android:layout_marginHorizontal="20sp"

            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@id/r">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/l4"

            android:layout_marginHorizontal="15sp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"


                android:layout_margin="5sp">
                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    >

                    <AutoCompleteTextView

                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:background="#ffffff"
                        android:id="@+id/ac1"
                        android:focusable="false"
                        android:paddingLeft="10sp"
                        android:hint="Year"/>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"


                android:layout_margin="5sp">
                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/ac2"
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:focusable="false"
                        android:background="#ffffff"
                        android:paddingLeft="10sp"
                        android:hint="Crop Season"/>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"


                android:layout_margin="5sp">
                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/ac3"
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:focusable="false"
                        android:background="#ffffff"
                        android:paddingLeft="10sp"
                        android:hint="Crop Classification"/>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"

                android:layout_margin="5sp">
                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/ac4"
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:background="#ffffff"
                        android:focusable="false"
                        android:paddingLeft="10sp"
                        android:hint="Crop Name"/>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:visibility="gone"

                android:layout_margin="5sp">
                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    >

                    <AutoCompleteTextView

                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:background="#ffffff"
                        android:focusable="false"
                        android:id="@+id/ac5"
                        android:paddingLeft="10sp"
                        android:hint="Crop Variety"/>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"

                android:layout_margin="5sp">
                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/ac6"
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:focusable="false"
                        android:background="#ffffff"
                        android:paddingLeft="10sp"
                        android:hint="Seed Name"/>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:visibility="gone"

                android:layout_margin="5sp">
                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/ac7"
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:background="#ffffff"
                        android:text="0"
                        android:inputType="numberDecimal"
                        android:paddingLeft="10sp"
                        android:hint="Seed Qty(Kg)"/>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"

                android:layout_margin="5sp">
                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/ac8"
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:background="#ffffff"
                        android:maxLength="5"
                        android:inputType="numberDecimal"
                        android:paddingLeft="10sp"
                        android:hint="Actual Production (in Quintals)"/>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"

                android:layout_margin="5sp">
                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/ac9"
                        android:layout_width="match_parent"
                        android:layout_height="60sp"
                        android:background="#ffffff"
                        android:maxLength="5"
                        android:inputType="numberDecimal"
                        android:paddingLeft="10sp"
                        android:hint="Produce available for sale (in Quintals)"/>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:visibility="gone"

                android:background="@drawable/relativebg"
                android:layout_margin="5sp">
                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/lrp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:maxLength="5"
                        android:inputType="text"
                        android:paddingLeft="10sp"
                        android:hint="LRP Name"/>
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:orientation="horizontal">
                <android.widget.Button

                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/rbutton4"

                    android:visibility="gone"
                    android:paddingLeft="10sp"
                    android:text="Add"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />



                <android.widget.Button

                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_margin="10sp"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:background="@drawable/rbutton"

                    android:paddingLeft="10sp"
                    android:text="View"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />
                <android.widget.Button

                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:id="@+id/save"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/rbutton3"

                    android:paddingLeft="10sp"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <android.widget.Button

                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:id="@+id/view"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_margin="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/rbutton"

                    android:paddingLeft="10sp"
                    android:text="View"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</RelativeLayout>